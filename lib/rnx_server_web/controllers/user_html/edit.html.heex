<.header>
  Editar Perfil
  <:subtitle>Actualiza tu información pública.</:subtitle>
</.header>

<div>
  <.form :let={f} for={@changeset} action={~p"/users/settings"} method="put" id="edit-form" multipart={true}>
    <.input field={f[:username]} type="text" label="Username" />
    <.input field={f[:pfp]} type="file" label="Nueva Foto de Perfil" />
  </.form>
  
  <div class="flex justify-end mt-4">
    <.button form="edit-form" type="submit">Guardar Cambios</.button>
  </div>
</div>